userdebug_or_eng(`
  allow domain vendor_diag_device:chr_file rw_file_perms;
')

get_prop(domain, vendor_gralloc_prop)

r_dir_file({domain - isolated_app - untrusted_app_all }, vendor_sysfs_soc);
r_dir_file({domain - isolated_app - untrusted_app_all }, vendor_sysfs_esoc);
r_dir_file({domain - isolated_app - untrusted_app_all }, vendor_sysfs_ssr);
r_dir_file({domain - isolated_app}, sysfs_thermal);

#Reding of standard chip details need this
allow untrusted_app_all {
        vendor_sysfs_soc
        vendor_sysfs_esoc
        vendor_sysfs_ssr
        }:dir search ;
r_dir_file({domain - isolated_app }, vendor_sysfs_public);


get_prop(domain, vendor_public_vendor_default_prop)

dontaudit domain kernel:system module_request;

# For compliance testing test suite reads vendor_security_path_level
# Which is the public readable property â€œ ro.vendor.build.security_patch
get_prop(domain, vendor_security_patch_level_prop)
neverallow {
     coredomain
     -init
     -ueventd
     -vold
     } vendor_persist_type: { dir file } *;

allow { domain - isolated_app } vendor_sysfs_kgsl:dir search;
# Allow all context to read gpu model
allow { domain - isolated_app } vendor_sysfs_kgsl_gpu_model:file r_file_perms;
allow { domain - isolated_app } vendor_sysfs_kgsl_gpubusy:file r_file_perms;

neverallow {
    coredomain
    -init
    -ueventd
    -hal_graphics_composer_default
} vendor_qmcs_file_type: { dir file } *;

neverallow { domain
- init
- vendor_init
- ueventd
- shell
- vendor_adsprpcd
- vendor_cdsprpcd
- vendor_sensors
- vendor_lowirpcd_service
- vendor_audioadsprpcd
- vendor_chre
- vendor_dspservice
- hal_contexthub_default
- hal_sensors_default
- hal_camera_default
userdebug_or_eng(` -vendor_usta_app')
userdebug_or_eng(` -vendor_ustaservice_app')
userdebug_or_eng(` -vendor_sysmonapp_app_test')
}vendor_xdsp_device:chr_file *;

neverallow { domain -init -vendor_init - ueventd } vendor_xdsp_device:chr_file ~{r_file_perms};

neverallow { domain
- init
- vendor_init
- appdomain
- ueventd
- mediacodec
- vendor_adsprpcd
- vendor_cdsprpcd
- vendor_audioadsprpcd
- hal_camera_default
- vendor_chre
- vendor_qvrd_vndr
- vendor_vppservice
- vendor_thermal-engine
- vendor_dspservice
userdebug_or_eng(` -vendor_sysmonapp_app_test')
} vendor_qdsp_device:chr_file *;
neverallow { domain -init -vendor_init - ueventd } vendor_qdsp_device:chr_file ~{r_file_perms};
neverallow { appdomain - shell userdebug_or_eng(`-vendor_sysmonapp_app_test') } vendor_qdsp_device:chr_file ~{ioctl read};
neverallow mediacodec vendor_qdsp_device:chr_file ~{ioctl read};

